@showUI Corridor
@showUI QuestUi
@elseIf Place="Corridor201"
@showUI Corridor201
@showUI QuestUi
@elseIf Place="Room201"
@goto Room_201_flow
@elseIf Place="Corridor2"
@showUI Corridor2
@showUI QuestUi
@elseIf Place="Corridor204"
